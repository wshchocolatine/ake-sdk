{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true, 
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": ["src/**/*", "tests/**/*", "bin"],
  "exclude": ["node_modules"]
}
